{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "LaTeX: Watch responseReviewer.tex",
      "type": "shell",
      "command": "latexmk",
      "args": [
        "-pdf",
        "-pvc",
        "-interaction=nonstopmode",
        "-halt-on-error",
        "-file-line-error",
        "reply_to_reviewers/responseReviewer.tex"
      ],
      "isBackground": true,
      "problemMatcher": {
        "owner": "latex",
        "pattern": {
          "regexp": "^(.+):(\\d+): (.+)$",
          "file": 1,
          "line": 2,
          "message": 3
        }
      }
    },
